{
  "name": "bulldog-stream-platform",
  "version": "1.0.0",
  "description": "Premium Live TV & Movie Streaming Platform with IPTV Support",
  "main": "backend-production.js",
  "scripts": {
    "start": "node backend-production.js",
    "dev": "nodemon backend-production.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run minify:css && npm run minify:js",
    "build:backend": "echo 'Backend build complete'",
    "minify:css": "cleancss -o dist/style.min.css style-production.css",
    "minify:js": "uglifyjs app-production.js -o dist/app.min.js -c -m",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "setup": "npm install && npm run setup:env",
    "setup:env": "node scripts/setup-env.js",
    "deploy": "npm run build && node scripts/deploy.js",
    "migrate": "node scripts/migrate-database.js",
    "seed": "node scripts/seed-database.js",
    "backup": "node scripts/backup-database.js",
    "monitor": "pm2 start ecosystem.config.js",
    "logs": "pm2 logs bulldog-stream",
    "restart": "pm2 restart bulldog-stream",
    "stop": "pm2 stop bulldog-stream"
  },
  "keywords": [
    "streaming",
    "iptv",
    "live-tv",
    "movies",
    "entertainment",
    "hls",
    "video-streaming",
    "nodejs",
    "express",
    "supabase"
  ],
  "author": "Bulldog Stream Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bulldog-stream-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/bulldog-stream-platform/issues"
  },
  "homepage": "https://bulldogstream.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "@supabase/supabase-js": "^2.38.0",
    "stripe": "^13.6.0",
    "dotenv": "^16.3.1",
    "joi": "^17.10.2",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "ws": "^8.14.2",
    "socket.io": "^4.7.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "ioredis": "^5.3.2",
    "bullmq": "^4.12.7",
    "axios": "^1.5.1",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.3.6",
    "xml2js": "^0.6.2",
    "moment-timezone": "^0.5.43",
    "geoip-lite": "^1.4.10",
    "countries-and-timezones": "^3.4.0",
    "crypto": "^1.0.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.51.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.3",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "pm2": "^5.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "@types/node": "^20.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend-production.js",
      "scripts/**/*.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-unused-vars": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "backend-production.js",
      "scripts/",
      ".env"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "dist/",
      "coverage/"
    ],
    "delay": 1000
  }
}
